package pkg_Practice;

public class Programs_JAVA {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		for (int i = 0; i <= 6; i++) {
			for(int j=6; j>=i;j--) 
			{
				System.out.print("*");
			}
			System.out.println();

		}

		// Print the * box
		/*
